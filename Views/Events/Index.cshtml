@using X.PagedList.Mvc.Core
@using X.PagedList


<h1 style="text-align: center">Hello welcome to Events list!</h1>
<h2 style="text-align: center">Take your pick from the events below!</h2>
@model IPagedList<EventsManager.Models.Event>
<div class = "table-responsive">
    <table class="table table-bordered table-hover">
       <thead>
            <tr>               
                <th>Name</th>
                <th>Date</th>
                <th>Location</th>
                <th>Category</th>
                <th>Temperature</th>
            </tr>
       </thead>
        <tbody>
            @foreach(var eventItem in Model)
            {
                <tr>                    
                    <td>@eventItem.Name</td>
                    <td>@eventItem.Date?.ToShortDateString()</td>
                    <td>@eventItem.Location?.Name</td>
                    <td>@string.Join(", ", eventItem.Categories.Select(c => c.Name))</td>
                    <td>@eventItem.Location?.TemperatureC</td>
                </tr>
            }
        </tbody>
    </table>    
</div>
<div class="pagination">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>